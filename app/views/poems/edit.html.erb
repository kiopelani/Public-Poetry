<div class="poem-form">
  <div class="errors"></div>
  <%= render 'shared/form_errors', :object => @poem %>
  <%= form_for @poem do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br />
    <%= f.label :content %>
    <%= f.text_area :content %><br />
    <%= f.submit "Update" %>
  <% end %>
</div>